{
	"name": "ts-express",
	"version": "1.0.0",
	"main": "src/index.ts",
	"author": "Ramic Gautam <gautamramic11@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev --respawn ./src/index.ts",
		"build": "rm -rf dist/ && prettier --write src/ && tsc",
		"test": "jest",
		"start": "ts-node src/index.ts",
		"ncu": "ncu",
		"ncu:u": "ncu -u",
		"schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
		"schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
		"seed": "ts-node ./src/seeder/index.ts"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.11",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^26.0.21",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/node": "^14.14.35",
		"@types/socket.io": "^2.1.13",
		"@types/yargs": "^16.0.0",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"eslint": "^7.22.0",
		"husky": "^5.2.0",
		"jest": "^26.6.3",
		"npm-check-updates": "^11.3.0",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"ts-jest": "^26.5.4",
		"ts-node": "9.1.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "4.2.3"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"class-validator": "^0.13.1",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"helmet": "^4.4.1",
		"jsonwebtoken": "^8.5.1",
		"mysql2": "^2.2.5",
		"reflect-metadata": "^0.1.13",
		"socket.io": "^4.0.0",
		"typeorm": "0.2.31",
		"yargs": "^16.2.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
